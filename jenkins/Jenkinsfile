pipeline {
    agent none

    environment { 
        SERVER_TO_DEPLOY = 'mramiro.com.br'
    }

    stages {
        agent {
                docker { 
                    image 'node:20-alpine'
                    args '-u root:root'
                }
        }
        stage('Build') {
            
            steps {
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
                sh 'uname -a'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm ci'
                sh 'npm run build'
                sh 'ls -la'
            }
        }
    }
}